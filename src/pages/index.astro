---
import "../styles/global.css";
import Card from "../components/Card.astro";
import ColumnContainer from "../components/ColumnContainer.astro";
import DataPicker from "../components/DataPicker.astro";
import Header from "../components/Header.astro";
import SurveyCTA from "../components/SurveyCTA.astro";
import SurveyDescription from "../components/SurveyDescription.astro";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>IT Salary Calculator</title>
	</head>
	<body class="body">
		<Header />
		<SurveyDescription />
		<SurveyCTA />
		<ColumnContainer>
			<Card headerText="1" paragraphText="Enter your programming language, and country." />
			<Card headerText="2" paragraphText="Calculate the salary range based on your parameters." />
			<DataPicker />
		</ColumnContainer>
	</body>
</html>

<style>
	.body {
		width: 1584px;
		max-width: 1584px;
		margin: auto;
		background-color: #000000;
		color: #ffffff;
		background-image: url('/spiral.svg');
		background-repeat: no-repeat;
		background-position: 55% 0%;
	}
</style>